<a href=<%= place_path(@conn, :show, @place) %> >
  <img src=<%= if length(@place.images) > 0, do: List.first(@place.images).url, else: "placeholder.png" %> class="thumbnail img-responsive">
  <div class = "caption text-center">
    <h3> <%= @place.name %></h3>
    <div class="image-description"><%= @place.short_description %></div>
  </div>
</a>